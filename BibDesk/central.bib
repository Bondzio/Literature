	Journal = MolBioEvol,
	Journal_Long = {Molecular Biology and Evolution},
	Keywords = {epistasis, local adaptation, fitness landscape, antibiotic resistance, TEM-1 beta-lactamase, cefotaxime resistance, distribution of fitness effects, sign epistasis, diminishing returns},
	Number = {8},
	Pages = {1779-1787},
	Title = {Patterns of Epistasis between Beneficial Mutations in an Antibiotic Resistance Gene},
