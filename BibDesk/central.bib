	Journal_Long = {Genetics},
	Keywords = {positive selection, selective sweep, Drosophila simulans, linkage disequilibrium, recombination, janusA, janusB, ocnus, composite-likelihood method, almost fixation},
	Number = {1},
	Pages = {265-279},
	Title = {Identification of a Locus Under Complex Positive Selection in \emph{{Drosophila simulans}} by Haplotype Mapping and Composite-Likelihood Estimation},
