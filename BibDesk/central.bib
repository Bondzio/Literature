	Doi = {10.1534/genetics.112.147231},
	Eprint = {http://www.genetics.org/content/193/3/929.full.pdf+html},
	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {signatures of selection, population differentiation, genetic differentiation, haplotype frequencies, hierarchical population structure, soft sweep},
	Number = {3},
