	Journal_Long = {Molecular Biology and Evolution},
	Keywords = {Drosophila melanogaster, codon usage, effective population size, recombination, Hill-Robertson interference, gene expression, sex chromosomes},
	Number = {4},
	Pages = {811-823},
	Title = {Codon Usage Bias and Effective Population Sizes on the X Chromosome versus the Autosomes in Drosophila melanogaster},
