	Journal_Long = {Genetics},
	Keywords = {ancestral influence graph, selection, fixation probability, genetic drift, recombination, two-locus model, epistasis, Hill-Robertson effect},
	Number = {2},
	Pages = {691-707},
	Title = {Fixation Probability in a Two-Locus Model by the Ancestral Recombination--Selection Graph},
	Url = {http://www.genetics.org/content/190/2/691.abstract},
