	Date-Modified = {2013-07-16 07:50:39 +0000},
	Doi = {10.1093/molbev/mst093},
	Eprint = {http://mbe.oxfordjournals.org/content/30/8/1761.full.pdf+html},
	Journal = MolBiolEvol,
