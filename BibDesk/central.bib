	Journal_Long = {Molecular Ecology},
	Keywords = {ecological genetics; evolutionary theory; fish; population genetics; theoretical},
	Number = {8},
	Pages = {2061--2064},
	Title = {Pervasive selection or is it{\ldots}? why are FST outliers sometimes so frequent?},
	Ty = {JOUR},
