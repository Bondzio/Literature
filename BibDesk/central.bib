	Journal = MolBiolEvol,
	Journal1 = {Mol Biol Evol},
	Keywords = {ancient DNA, Bayesian statistical inference, Bayesian coalescent, demographic history, postmortem DNA damage, bison},
	Month = {2},
	Number = {2},
	Pages = {245--248},
	Title = {Accommodating the Effect of Ancient DNA Damage on Inferences of Demographic Histories},
	Ty = {JOUR},
	Url = {http://mbe.oxfordjournals.org/cgi/content/abstract/26/2/245},
	Volume = {26},
