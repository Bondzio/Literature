	Journal = ProcNatlAcadSciUSA,
	Journal_Long = {Proceedings of the National Academy of Sciences of the United States of America},
	Keywords = {chromosomal rearrangement, genetic architecture, genomic islands of divergence, local adaptation, migration-selection balance},
	Number = {19},
	Pages = {1743--1751},
	Title = {Genomic rearrangements and the evolution of clusters of locally adaptive loci},
	Volume = {110},
	Year = {2013},
