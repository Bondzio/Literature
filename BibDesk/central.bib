	Keywords = {speciation, adaptive introgression, approximate Bayesian computation, Ciona intestinalis, invasive species},
	Number = {7},
	Pages = {1574-1587},
	Title = {Crossing the Species Barrier: Genomic Hotspots of Introgression between Two Highly Divergent Ciona intestinalis Species},
