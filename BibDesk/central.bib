	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {demographic inference, human evolution, population history, population size, effective population size, pairwise sequentially Markovian coalescent, diCal},
	Number = {3},
	Pages = {647-662},
	Title = {Estimating Variable Effective Population Sizes from Multiple Genomes: A Sequentially Markov Conditional Sampling Distribution Approach},
