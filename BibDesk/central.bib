	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {divergence, effective population size, selection, purifying selection, rodents, primates},
	Number = {3},
	Pages = {995-1002},
	Title = {Significance of Population Size on the Fixation of Nonsynonymous Mutations in Genes Under Varying Levels of Selection Pressure},
	Url = {http://www.genetics.org/content/193/3/995.abstract},
	Volume = {193},
	Year = {2013},
