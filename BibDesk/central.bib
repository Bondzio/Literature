	Issn = {0014-3820},
	Journal = Evolution,
	Keywords = {clonal competition, deleterious mutations, fixation, metapopulation, Muller's ratchet},
	Number = {4},
	Pages = {1116--1125},
	Publication-Type = {J},
	Times-Cited = {11},
	Title = {Fixation of clonal lineages under Muller's ratchet},
	Volume = {54},
