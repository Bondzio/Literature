	Doi = {10.1111/mec.12285},
	Issn = {1365-294X},
	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {adaptation, angiosperms, life history evolution, natural selection and contemporary evolution, phenotypic plasticity, quantitative genetics},
	Number = {13},
