	Journal_Long = {Molecular Ecology},
	Keywords = {sex-biased dispersal, Caretta caretta, loggerhead turtle, management units},
	Number = {8},
	Pages = {2389--2402},
	Publication-Type = {J},
	Times-Cited = {61},
	Title = {{Conservation implications of complex population structure: lessons from the loggerhead turtle (\emph{Caretta caretta})}},
