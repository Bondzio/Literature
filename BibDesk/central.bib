	Journal = MolEcol,
	Keywords = {homoplasy, stepwise mutation model, microsatellites, identity by descent, identity by state},
	Number = {9},
	Pages = {1591--1604},
	Publication-Type = {J},
	Times-Cited = {163},
	Title = {Homoplasy and mutation model at microsatellite loci and their consequences for population genetics analysis},
	Volume = {11},
	Year = {2002}}

