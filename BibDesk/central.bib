	Keywords = {neutrality tests, selective sweep, selection, neutral evolution, positive selection, negative selection, Ewens-Watterson test, Tajima's D, Hudson-Kreitman-Aguade test, McDonald-Kreitmann test, genome scans},
	Month = {2},
	Number = {2},
	Pages = {273--283},
	Title = {An Investigation of the Statistical Power of Neutrality Tests Based on Comparative and Population Genetic Data},
	Ty = {JOUR},
