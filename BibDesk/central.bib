	Journal = Genetics,
	Keywords = {hitch-hiking, selective sweep, composite-likelihood method, linkage disequilibrium, genealogy, marginal allele frequencies},
	Number = {3},
	Pages = {1513-1524},
	Title = {Linkage Disequilibrium as a Signature of Selective Sweeps},
	Url = {http://www.genetics.org/content/167/3/1513.abstract},
	Volume = {167},
