	Journal = JEvolBiol,
	Journal_Long = {Journal of Evolutionary Biology},
	Keywords = {evolution; fitness; local adaptation; mate choice; MHC; pathogen resistance; population differentiation; selection},
	M3 = {10.1046/j.1420-9101.2003.00531.x},
	Number = {3},
	Pages = {363--377},
	Publisher = {Blackwell Science Ltd},
	Title = {{MHC} studies in nonmodel vertebrates: {w}hat have we learned about natural selection in 15 years?},
