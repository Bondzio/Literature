	Issn = {1365-294X},
	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {divergence, genome, Heliconius, phylogeny, speciation},
	Month = {Feb},
	Number = {3},
	Pages = {814--826},
	Title = {Genome-wide patterns of divergence and gene flow across a butterfly radiation},
	Url = {http://dx.doi.org/10.1111/j.1365-294X.2012.05730.x},
	Volume = {22},
	Year = {2013},
