	Journal = ProcNatlAcadSciUSA,
	Journal_Long = {Proceedings of the National Academy of Sciences},
	Keywords = {neutral theory, nearly-neutral theory, distribution of mutational effects, effective neutral mutation rate, infinite-sites model, heterozygosity, rate of evolution, population size, environmental conditions},
	Number = {7},
	Pages = {3440-3444},
	Title = {Model of effectively neutral mutations in which selective constraint is incorporated},
